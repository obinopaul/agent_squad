{
    "manifest_version": 3,
    "name": "XAI Voice Frontend",
    "version": "0.1.0",
    "description": "XAI Voice Frontend as a Chrome Extension",
    "action": {
      "default_popup": "out/index.html",
      "default_icon": {
      }
    },
    "permissions": [
      "microphone"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; connect-src wss://your-livekit-server-url.com https://your-api-endpoint-for-connection-details.com;"
    },
    "icons": {
    }
  }